	<UserControl.Styles>
		<Style Selector="pelican|PlayTemplate">
			<Setter Property="Template">
				<ControlTemplate>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
					
						<Grid
							Grid.Row="0"
							Height="40"
							HorizontalAlignment="Stretch"
							ColumnDefinitions="40,*"
						>
							<Rectangle
								Grid.Column="0"
								Grid.Row="0"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								Fill="Red"
							/>
							<TextBlock
								Grid.Column="1"
								Text="Hello" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
					
						<ContentPresenter Grid.Row="1" Name="fred"
							ContentTemplate="{TemplateBinding ContentTemplate}"
							Content="{TemplateBinding Content}"
							VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
							HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
							/>
					</Grid>
				</ControlTemplate>
			</Setter>
		</Style>		
		
	</UserControl.Styles>	
	

	
